#:import MDLabel kivymd.uix.label.MDLabel
#:import MDTextField kivymd.uix.textfield.MDTextField
#:import MDButton kivymd.uix.button.MDButton
#:import MDButtonText kivymd.uix.button.MDButtonText
#:import MDExtendedFabButton kivymd.uix.button.MDExtendedFabButton


<HomeScreen>:
    name: "home"
    md_bg_color: self.theme_cls.backgroundColor
    destinations_container: destinations_container

    MDBoxLayout:
        orientation: "vertical"
        padding: "100dp"
        spacing: "10dp"

        MDLabel:
            text: "My Travel Destinations"
            halign: "center"
            theme_font_style: "H5"
            size_hint_y: None
            height: self.texture_size[1]

        ScrollView:
            size_hint_y: 1

            MDGridLayout:
                id: destinations_container
                cols: 1
                spacing: "12dp"
                padding: "12dp"  # Uniform padding of 10dp on all sides
                size_hint_y: None
                size_hint_x: 1
                height: self.minimum_height

<PromptScreen>:
    name: "prompt"
    MDBoxLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # white
            Rectangle:
                pos: self.pos
                size: self.size
                
        orientation: "vertical"
        padding: "10dp"
        spacing: "10dp"

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: "48dp"
            spacing: "10dp"

            MDButton:
                on_release: app.root.current = "home"
                MDButtonText:
                    text: "Back"
            MDButton:
                on_release: root.submit_prompt()
                MDButtonText:
                    text: "Submit"
            MDButton:
                on_release: root.clear_itinerary()
                MDButtonText:
                    text: "Clear Itinerary"
            MDButton:
                on_release: root.open_google_maps_screen(destination_label)
                MDButtonText:
                    text: "Maps"
        MDTextField:
            id: prompt_input
            hint_text: "Location"
            MDTextFieldHintText:
                text: "What are some of your interests?"
                
        MDTextField:
            id: origin_input
            hint_text: "Origin"
            MDTextFieldHintText:
                text: "What is your point of origin?"
        
        MDTextField:
            id: date_field
            mode: "outlined"
            pos_hint: {'center_x': .5, 'center_y': .85}
            size_hint_x: .5
            on_focus: root.on_date_focus(self, args[1])
            
            MDTextFieldHintText:
                text: "Choose Date Range"

            MDTextFieldHelperText:
                text: "MM/DD/YYYY"
                mode: "persistent"

            MDTextFieldTrailingIcon:
                icon: "calendar"

        MDLabel:
            id: destination_label
            text: ""
            halign: "center"
            theme_font_style: "H6"
            size_hint_y: None
            height: self.texture_size[1]

        MDCard:
            orientation: "vertical"
            padding: "12dp"
            radius: [12]
            elevation: 2
            md_bg_color: "white"
            size_hint_y: 1  # or adjust as needed

            MDLabel:
                text: "Generated Itinerary"
                theme_font_style: "Subtitle1"
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]
                padding: [0, "8dp"]

            ScrollView:
                MDGridLayout:
                    id: output_box
                    cols: 1
                    spacing: "8dp"
                    size_hint_y: None
                    height: self.minimum_height

<Map>:
    name: "map"
    md_bg_color: self.theme_cls.backgroundColor

    MDBoxLayout:
        orientation: "vertical"
        padding: "16dp"
        spacing: "8dp"

        MDButton:
            on_release: app.root.current = "prompt"
            MDButtonText:
                text: "Back"

        MDTopAppBar:
            title: "Your Route"
            left_action_items: [["arrow-left", lambda x: app.change_screen("prompt")]]

        MDLabel:
            id: route_label
            text: "Trip loading..."
            halign: "center"
            theme_font_style: "H6"
            size_hint_y: None
            height: self.texture_size[1]

        MapView:
            id: mapview
            size_hint_y: 1
