#:import MDLabel kivymd.uix.label.MDLabel
#:import MDTextField kivymd.uix.textfield.MDTextField
#:import MDButton kivymd.uix.button.MDButton
#:import MDButtonText kivymd.uix.button.MDButtonText
#:import MDExtendedFabButton kivymd.uix.button.MDExtendedFabButton

<DestinationCard@MDButton>:
    size_hint_y: None
    height: "80dp"
    md_bg_color: app.theme_cls.primary_color
    radius: [12]
    on_release: root.on_release
    MDButtonText:
        text: root.text
        halign: "center"
        color: 1, 1, 1, 1

<HomeScreen>:
    name: "home"
    md_bg_color: self.theme_cls.backgroundColor
    destinations_container: destinations_container

    MDBoxLayout:
        orientation: "vertical"
        padding: "10dp"
        spacing: "10dp"

        MDLabel:
            text: "My Travel Destinations"
            halign: "center"
            theme_font_style: "H5"
            size_hint_y: None
            height: self.texture_size[1]

        ScrollView:
            size_hint_y: 1

            MDGridLayout:
                id: destinations_container
                cols: 1
                spacing: "12dp"
                size_hint_y: None
                height: self.minimum_height

<PromptScreen>:
    name: "prompt"
    MDBoxLayout:
        orientation: "vertical"
        padding: "10dp"
        spacing: "10dp"

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: "48dp"
            spacing: "10dp"

            MDButton:
                on_release: app.root.current = "home"
                MDButtonText:
                    text: "Back"

            MDButton:
                on_release: root.submit_prompt()
                MDButtonText:
                    text: "Submit"

        MDTextField:
            id: prompt_input
            hint_text: "What do you want to do?"

        MDLabel:
            id: destination_label
            text: ""
            halign: "center"
            theme_font_style: "H6"
            size_hint_y: None
            height: self.texture_size[1]

        ScrollView:
            size_hint_y: 1

            MDGridLayout:
                id: output_box
                cols: 1
                spacing: "8dp"
                size_hint_y: None
                height: self.minimum_height