#:import MDLabel kivymd.uix.label.MDLabel
#:import MDTextField kivymd.uix.textfield.MDTextField
#:import MDButton kivymd.uix.button.MDButton
#:import MDButtonText kivymd.uix.button.MDButtonText
#:import MDExtendedFabButton kivymd.uix.button.MDExtendedFabButton


<HomeScreen>:
    name: "home"
    md_bg_color: self.theme_cls.backgroundColor
    destinations_container: destinations_container

    MDBoxLayout:
        orientation: "vertical"
        padding: "10dp"
        spacing: "10dp"

        MDLabel:
            text: "My Travel Destinations"
            halign: "center"
            theme_font_style: "H5"
            size_hint_y: None
            height: self.texture_size[1]

        ScrollView:
            size_hint_y: 1

            MDGridLayout:
                id: destinations_container
                cols: 1
                spacing: "12dp"
                padding: "12dp"  # Uniform padding of 10dp on all sides
                size_hint_y: None
                height: self.minimum_height

<PromptScreen>:
    name: "prompt"
    MDBoxLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # white
            Rectangle:
                pos: self.pos
                size: self.size
                
        orientation: "vertical"
        padding: "10dp"
        spacing: "10dp"

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: "48dp"
            spacing: "10dp"

            MDButton:
                on_release: app.root.current = "home"
                MDButtonText:
                    text: "Back"

            MDButton:
                on_release: root.submit_prompt()
                MDButtonText:
                    text: "Submit"

        MDTextField:
            id: prompt_input
            hint_text: "Location"

        MDTextField:
            id: date_field
            mode: "outlined"
            pos_hint: {'center_x': .5, 'center_y': .85}
            size_hint_x: .5
            on_focus: root.show_date_picker(self)

            MDTextFieldHintText:
                text: "Docked date picker"

            MDTextFieldHelperText:
                text: "MM/DD/YYYY"
                mode: "persistent"

            MDTextFieldTrailingIcon:
                icon: "calendar"
                
        MDLabel:
            id: destination_label
            text: ""
            halign: "center"
            theme_font_style: "H6"
            size_hint_y: None
            height: self.texture_size[1]

        ScrollView:
            size_hint_y: 1

            MDGridLayout:
                id: output_box
                cols: 1
                spacing: "8dp"
                size_hint_y: None
                height: self.minimum_height